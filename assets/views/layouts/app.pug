doctype html
//Layout for app
html
  head
    block seo
    title Red Leaf Bistro
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='/css/main.css')
  body
    // Template Container
    #Layout-container
      // Nav Container
      block nav
      div.hamburger
        div.line
        div.line
        div.line
      //Nav-menu container
      nav.nav-menu NAV CONTENT
        ul 
          li
            a home 
          li
            a about
          li
            a reservations
          li
            a contact      
      block content
      // Footer Container  
      block foot
      footer 
        .hours 
          span Hours
          | Monday-Thursday: 11am - 10pm
          br
          | Friday-Sunday: 12am - 12pm
        .address
          span Address
          | 654 Embry St, Houston, Tx 77027
        .contact
          span Conact us
          | &#x2709 RLBistro@gmail.com
          br
          | &#9742 (213)-4288-452
    // Scripts
    block scripts
    script(src='/js/main.js')
